{
  "name": "@giotramu/eslint-config",
  "version": "1.0.0",
  "description": "Strict and modular ESLint config with supports for TypeScript and React.",
  "author": "giotramu <https://github.com/giotramu>",
  "homepage": "https://github.com/giotramu/eslint-config#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giotramu/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/giotramu/eslint-config/issues"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "index.js",
  "types": "types/index.d.ts",
  "files": [
    "index.js",
    "javascript.js",
    "typescript.js",
    "react.js",
    "types/"
  ],
  "prettier": "@giotramu/prettier-config",
  "scripts": {
    "check:tsc": "tsc --noEmit",
    "check:src": "eslint . --ext .js,.ts --ignore-path .gitignore",
    "check": "run-p -cln check:*",
    "pretest": "npm run build",
    "test:js": "eslint . --ext .js,.jsx",
    "test:ts": "eslint . --ext .ts,.tsx",
    "test": "run-p -cln test:*",
    "prebuild": "del ./{index,javascript,typescript,react}.js ./types",
    "build": "tsc"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.3.0",
    "@giotramu/prettier-config": "^1.4.0",
    "@types/node": "^16.0.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.35.0",
    "npm-run-all": "^4.1.0",
    "prettier": "^2.8.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "@babel/core": "^7.21.0",
    "@babel/eslint-parser": "^7.19.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint-plugin-import": "^2.27.0",
    "eslint-plugin-jsdoc": "^40.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "peerDependencies": {
    "eslint": "^8.0.0",
    "typescript": "^4.9.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "keywords": [
    "linter",
    "eslint",
    "eslint-config",
    "tslint"
  ]
}
